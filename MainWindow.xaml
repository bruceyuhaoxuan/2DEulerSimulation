<Window x:Class="EulerSimulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Euler Simulation" Height="720" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Canvas for visualization -->
        <Canvas Name="SimulationCanvas" Background="LightGray" Width="800" Height="600" Grid.Row="0" />

        <!-- Controls -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="10">
            <Button Name="StartButton" Content="Start Simulation" Click="StartSimulation" Margin="5" />
            <Button Name="StopButton" Content="Stop Simulation" Click="StopSimulation" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
